(proc pass (form)
    (if (pair? form)
        (case form.head
            (Î»)
                ((gen-pass 'proc) pass form)
            (def if quote seq wall gate capture guard error)
                ((gen-pass form.head) pass form)
            (proc)
                (if (symbol? form.1)
                    %(def $form.1 (proc $form.2 @(pass form.tail.tail.tail)))
