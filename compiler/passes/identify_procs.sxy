
(use gen-pass "generic.sxy")

(lib () pass)

; (λ (args) bodies...)    -> (λ $id (args) bodies...)
; (proc (args) bodies...) -> (proc $id (args) bodies...)

(proc pass (form db)
    (proc id-proc (form)
        (def id (uuid))
        (db.set! id form)
        %($form.head $id $form.1 @(pass form.tail.tail db)))
    (def general
        (gen-pass (:
            λ    id-proc
            proc id-proc
        )))
    (general form))

