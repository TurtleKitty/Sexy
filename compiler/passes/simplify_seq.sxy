
(lib () pass)

; (seq 1 2 3 4 5) -> (seq 1 (seq 2 (seq 3 (seq 4 5))))

(fun pass (form)
    (if (pair? form)
        (if (and (= form.head 'seq) (> form.size 3))
            %(seq $(pass form.1) $(pass (pair 'seq form.tail.tail)))
            (pair (pass form.head) (pass form.tail)))
        form))

